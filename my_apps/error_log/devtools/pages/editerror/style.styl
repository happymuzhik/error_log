main_bg_color = #FFF
secondary_color = #CCC
standart_font_size = 14pt
standart_font_color = #333
inputs_border_color = #A9A9A9

default_color = #9E9E9E
danger_color = #F44336
success_color = #4CAF50
info_color = #2196F3

standart_border_setting(color){
	1px solid color
}

.error-form__title
	font-weight: bold
	text-align: center
	margin-bottom: 10px
			
.history__cont
	margin-top: 20px

.history__header
	height: 40px

.history__title
	height: 40px
	padding-top: 10px
	font-weight: bold
	text-align: center

.history__table
	width: 100%
	margin-top: 5px
	
.history__table th:nth-child(1)
	width: 300px

.history__table th,
.history__table td
	padding: 10px
	text-align: center
	
.comment__background
	position: fixed
	width: 100%
	height: 100%
	top: 0px
	left: 0px
	background-color: #000
	opacity: 0.6
	cursor: pointer
	
.comment
	padding: 20px
	position: fixed
	width: 400px
	height: 200px
	top: 50%
	left: 50%
	margin-top: -100px
	margin-left: -200px
	background-color: #FFF
	
.comment__textarea
	textarea
		height: 120px
		resize: none
		
.comment__buttons
	.column-6
		padding: 0px
		padding-right: 2.5px
	.column-6:nth-child(2)
		padding-right: 0px
		padding-left: 2.5px
		
.statuses__button
	margin-bottom: 5px
	background-color: #e5e5e5
	color: #333
	
.statuses__button:hover
	background-color: #e5e5e5 - 10%